{
  "compilerOptions": {
    "target": "esnext",
    "module": "nodenext",
    "strict": true,
    "verbatimModuleSyntax": true,
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx",
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"]
    },
    "types": [
      "node"
    ],
    "outDir": "./dist",
  },
  "exclude": ["node_modules"]
}
